#list.col-xs-10.col-xs-offset-1.col-md-8.col-md-offset-2.well
  %h2 Log in
  #form-row.row
    .col-md-12
      = form_tag sessions_path do
        .form-group
          = label_tag :email
          = email_field_tag :email, params[:email], class: "form-control", placeholder: "Enter your email", autofocus: true
        .form-group
          = label_tag :password
          = password_field_tag :password, params[:password], class: "form-control", placeholder: "Enter your password"
        .form-group
          = submit_tag "Log in", class: "btn btn-success"