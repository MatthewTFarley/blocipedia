= form_for wiki do |f|
  - if wiki.errors.any?
    .alert.alert-danger
      %h4
        There are #{pluralize(wiki.errors.count, "error")}.
      %ul
        - wiki.errors.full_messages.each do |msg|
          %li= msg
  = form_group_tag(wiki.errors[:title]) do
    = f.label :title
    = f.text_field :title, class: 'form-control', placeholder: "Enter wiki title"
  = form_group_tag(wiki.errors[:body]) do
    = f.label :body
    = f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter wiki body"
  - if !current_user.standard? && (current_user.owns?(wiki) || wiki.created_at.blank?)
    .form-group
      = f.check_box :private
      = f.label :private
  - if !current_user.standard? && wiki.private && User.count > 1
    .form-group
      = f.label 'Add Collaborators:'
      = f.select :collaborators, options_for_select(collaborator_select_list, wiki.collaborators.map{|collaborator| collaborator.id}), {}, multiple: "multiple"
  .form-group
    = f.submit "Save", class: 'btn btn-success'